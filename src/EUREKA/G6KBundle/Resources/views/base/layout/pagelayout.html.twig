{# DO NOT EDIT THIS FILE #}	
{% import "EUREKAG6KBundle:base/macros:form.html.twig" as form %}
{% block doctype %}<!DOCTYPE html>{% endblock %}
{% block html %}<html lang="{{ app.request.locale }}" class="no-js">{% endblock %}
<head>
{%- if script == 1 -%}<noscript><meta http-equiv="refresh" content="0; url=?no-js=1" /></noscript>{% endif %}
{%- if script == 0 -%}
<script type="text/javascript">
<!--
if (/no-js=/.test(window.location.search)) {
	window.location.search = "";
}
-->
</script>
{% endif %}
<title>{% block title %}{% endblock %}</title>
{% block metas %}
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />      
<!--[if IE]>
<meta http-equiv="X-UA-Compatible" content="IE=Edge" />
<![endif]-->    
{% endblock %}

{% block styles %}
<link rel='stylesheet' type='text/css' href="{{ asset('bundles/eurekag6k/base/css/g6k.css') }}" />
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/eurekag6k/base/js/datePicker/css/datepicker.css') }}" />
<link rel="stylesheet" type="text/css" href="{{ asset('bundles/eurekag6k/base/js/select2/select2.css') }}" />
{% endblock %}
{% block hscripts %}
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/modernizr.min.js') }}"></script>
<!--[if lt IE 9]>
<script src="{{ asset('bundles/eurekag6k/base/js/html5shiv.min.js') }}"></script>
<script src="{{ asset('bundles/eurekag6k/base/js/respond.min.js') }}"></script>
<![endif]-->    
{% endblock %}
</head>
<body class="noScript {% block bodyclass %}{% endblock %}">

{% block body %}
{% block content %}{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery-1.11.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery-migrate-1.2.1.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/collapse.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/datePicker/js/lang/')}}{{ app.request.locale }}.js"></script>
{%- if ua.match('Safari') %}
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/datePicker/js/datepicker-safari.js') }}"></script>
{%- else %}
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/datePicker/js/datepicker.js') }}"></script>
{%- endif -%}
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/select2/select2.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/select2/select2_locale_fr.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery.swap-image.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/jquery.placeholder.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/translations/config.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/translations/messages') }}/{{ app.request.locale }}.js"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/accounting.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/eurekag6k/base/js/g6k.min.js') }}"></script>
<script type="text/javascript">
$(document).ready(function(){
	{%- if not(ua.mobile or step.simulator.dynamic or step.dynamic) -%}
		{%- for fieldset in step.fieldSets -%}
			{%- for field in fieldset.fields -%}
				{%- if field.displayable and field.usage == 'input' -%}
					{% set data = step.simulator.dataById(field.data) %}
					{%- if data.type == 'date' -%}
						{% set name = data.name %}
				
	datePickerController.createDatePicker({
		formElements:{
			"{{ data.name}}":"%d/%m/%Y"
		}, 
		noFadeEffect: true     
	});			
					{% endif %}
				{% endif %}
			{% endfor %}
		{% endfor %}
	{% endif %}

	var g6k = new G6k({%- if step.dynamic or (step.simulator.dynamic and step.id == 0) -%}true{%- else -%}false{%- endif %}, {% if ua.mobile -%}true{%- else -%}false{%- endif -%}, "{{ app.request.locale }}");
	g6k.run();
});
</script>
{% endblock %}
{% endblock %}

</body>
</html>


